{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": [
    "src/main.ts",
    "src/core/**/*",
    "src/crypto/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/ui/**/*",
    "node_modules",
    "dist",
    "dist-web"
  ]
}