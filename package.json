{
  "name": "gestell",
  "version": "0.1.0",
  "description": "座架-科幻小说写作工具",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:main && npx electron dist/main.js --dev",
    "build": "npm run build:main && npm run build:web",
    "build:main": "tsc --project tsconfig.main.json && powershell -Command \"try { Copy-Item -Path 'src/generated' -Destination 'dist' -Recurse -Force -ErrorAction SilentlyContinue } catch { Write-Host 'Some files are in use, skipping...' }\"",
    "build:web": "vite build",
    "build:watch": "tsc --watch",
    "start": "npm run build && electron dist/main.js",
    "test": "npm run build && electron dist/main.js --test",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist dist-web",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "sqlite3",
    "database"
  ],
  "author": "unity",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@jest/globals": "^30.2.0",
    "@types/crypto-js": "^4.2.2",
    "@types/highlight.js": "^9.12.4",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.0",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.7.0",
    "@types/prosemirror-commands": "^1.0.4",
    "@types/prosemirror-history": "^1.0.3",
    "@types/prosemirror-keymap": "^1.0.4",
    "@types/prosemirror-menu": "^1.0.6",
    "@types/prosemirror-model": "^1.16.2",
    "@types/prosemirror-state": "^1.3.0",
    "@types/prosemirror-transform": "^1.4.2",
    "@types/prosemirror-view": "^1.23.3",
    "@types/sortablejs": "^1.15.8",
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^30.2.0",
    "node-gyp": "^11.4.2",
    "prisma": "^6.17.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vue-tsc": "^3.1.1",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "@types/better-sqlite3": "^7.6.13",
    "@vlcn.io/crsqlite": "^0.16.3",
    "@vlcn.io/rx-tbl": "^0.15.0",
    "better-sqlite3": "^12.4.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "electron-store": "^10.0.0",
    "highlight.js": "^11.10.0",
    "jszip": "^3.10.1",
    "lib0": "^0.2.114",
    "marked": "^14.1.2",
    "pinia": "^3.0.3",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.4.1",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-menu": "^1.2.5",
    "prosemirror-model": "^1.25.3",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.4",
    "prosemirror-view": "^1.41.3",
    "sortablejs": "^1.15.6",
    "ulid": "^2.3.0",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vuedraggable": "^4.1.0",
    "y-prosemirror": "^1.3.7",
    "y-protocols": "^1.0.6",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "build": {
    "appId": "com.scifan.gestell",
    "productName": "Gestell",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
